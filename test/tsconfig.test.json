{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    // allowSyntheticDefaultImports - so that something like `import fs from 'fs'` doesn't throw compilation errors
    "allowSyntheticDefaultImports": true,
    // es2017 - nodejs 8+ (with native async/await)
    "target": "es2017",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "lib": [
      "es2017"
    ]
  },
  "include": [
    "./test/**/*"
  ]
}
